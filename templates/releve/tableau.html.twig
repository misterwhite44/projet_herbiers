<table class="table table-bordered">
    {% for row in tableau %}
        <tr>
            {% for cell in row %}
                <td>{{ cell }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
</table>
<!-- Ajoutez ces lignes dans la section style -->
<style>
        .table {
                width: 100%;
                margin-bottom: 1rem;
                color: #212529;
                border-collapse: collapse;
                background-color: #f8f9fa; /* Couleur de fond */
                border-radius: 8px; /* Bords arrondis */
        }

        .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
        }

        .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                background-color: #007bff; /* Couleur de fond de l'en-tête */
                color: #fff; /* Couleur du texte de l'en-tête */
        }

        .table tbody+tbody {
                border-top: 2px solid #dee2e6;
        }

        .table-bordered {
                border: 1px solid #dee2e6;
        }

        .table-bordered th, .table-bordered td {
                border: 1px solid #dee2e6;
        }

        .table-bordered th, .table-bordered td {
                border: 1px solid #dee2e6;
                background-color: #ffffff; /* Couleur de fond des cellules */
        }

        .table-hover tbody tr:hover {
                background-color: #e9ecef; /* Couleur de fond au survol */
        }
</style>

