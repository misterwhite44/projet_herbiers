{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Lieux</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-bordered rounded" style="background-color: #007bff; color: #fff;">
            <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nom du Lieu</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieu %}
                <tr>
                    <td>{{ lieu.id }}</td>
                    <td>{{ lieu.nom }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_lieu_modifier', {'id': lieu.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('app_lieu_supprimer', {'id': lieu.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun lieu trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr class="my-4">
        {{ render(controller('App\\Controller\\LieuController::ajouter')) }}
        <a href="{{ path('app_releve_index') }}" class="btn btn-secondary">Revenir à la page des Relevés</a>
    </div>
{% endblock %}
